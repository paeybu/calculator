<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="calc_element_top_row">
        <item name="android:layout_columnWeight" tools:targetApi="lollipop">1</item>
        <item name="android:layout_rowWeight" tools:targetApi="lollipop">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/gray_circle</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="calc_element">
        <item name="android:layout_columnWeight" tools:targetApi="lollipop">1</item>
        <item name="android:layout_rowWeight" tools:targetApi="lollipop">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/dark_gray_circle</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="calc_element_orange">
        <item name="android:layout_columnWeight" tools:targetApi="lollipop">1</item>
        <item name="android:layout_rowWeight" tools:targetApi="lollipop">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/orange_circle</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
